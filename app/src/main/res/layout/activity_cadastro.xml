<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/verde">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo4tech" />
    </RelativeLayout>


    <TextView
    android:id="@+id/tvLogin"
    android:layout_marginTop="100dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cadastro de Usuario"
    android:textSize="24sp"
    android:textColor="@color/black"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="-200dp"
    />

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvLogin"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="-85dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circulo_drawable"
        android:gravity="center"
        android:hint="Nome" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextNome"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="-80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sem_borda"
        android:hint="E-mail"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextSenha"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextEmail"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="-80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sem_borda"
        android:hint="Senha"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextCEP"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextSenha"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="-80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sem_borda"
        android:hint="CEP"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextEndereco"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextCEP"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="-85dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sem_borda"
        android:hint="EndereÃ§o"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextComplemento"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextEndereco"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circulo_drawable"
        android:hint="Complemento"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextComplemento"
        android:layout_marginTop="2dp"
        android:text="Enviar"
        android:layout_centerHorizontal="true"
        android:background="@color/verde"/>

</RelativeLayout>